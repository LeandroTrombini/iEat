<h1>Restaurantes</h1>
    <table>
      <thead>
        <tr>
          <th>Nome</th>          
        </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |r| %>
          <tr>
            <td> <%= r.name %> </td>    
            <table> 
              <tbody>
                <% r.products.each do |product| %>
                  <tr>
                    <%= form_tag('/orders') do %>
                      <%= hidden_field_tag :product_id, product.id%>
                      <td> - <%= product.name %> </td>    
                      <td> - <%= product.value %> </td>   
                      <td><%= submit_tag 'Pedir' %></td>
                    <% end %>   
                  </tr>
                <% end %>
              </tbody>
            </table>        
          </tr>
        <% end %>
      </tbody>
    </table>